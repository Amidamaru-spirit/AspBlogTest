@model List<TestBlog.ViewModels.UserVM>
@{
    ViewData["Title"] = "Users";
}



<div class="container-fluid">
    <a class="btn btn-primary mb-1">Add User</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h3 class="card-title text-white">
                Users
            </h3>
        </div>
        <div class="card-body">
            <table class="table table-stripped table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>UserName</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.UserName</td>
                            <td>
                                <a class="btn btn-secondary">Forget Password</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>